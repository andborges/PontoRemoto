@using PontoRemoto.Application.Resources
@using PontoRemoto.Web.Helpers

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="logo">
        @Texts.ApplicationName
    </div>

    <div class="sidebar-collapse">
        <ul class="nav" id="side-menu">
            <li class="nav-header">
                <div class="dropdown profile-element">
                    @*<span>
                        <img alt="image" class="img-circle" src="~/Images/profile_small.jpg" />
                    </span>*@
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <span class="clear">
                            <span class="block m-t-xs">@Texts.Welcome <strong class="font-bold">@Html.Action("LoggedUserName", "Account")</strong></span>
                            <span class="text-muted text-xs block">@Html.Action("LoggedUserEmail", "Account") <b class="caret"></b></span>
                        </span>
                    </a>

                    <ul class="dropdown-menu animated fadeIn m-t-xs">
                        <li><a href="@Url.Action("ChangePassword", "Manage")">@Labels.ChangePassword</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("LogOff", "Account")">@Labels.LogOff</a></li>
                    </ul>
                </div>
                <div class="logo-element">@Texts.ApplicationName</div>
            </li>
            
            <li class="@Html.IsSelected(controller: "Home")">
                <a href="@Url.Action("Admin", "Home")"><i class="fa fa-home"></i> <span class="nav-label">@Labels.Home</span></a>
            </li>

            <li class="@Html.IsSelected(controller: "Client")">
                <a href="@Url.Action("Configuration", "Client")"><i class="fa fa-cog"></i> <span class="nav-label">@Labels.Configuration</span></a>
            </li>
            <li class="@Html.IsSelected(controller: "Worker")">
                <a href="@Url.Action("Index", "Worker")"><i class="fa fa-male"></i> <span class="nav-label">@Labels.YourWorkers</span></a>
            </li>
        </ul>
    </div>
</nav>