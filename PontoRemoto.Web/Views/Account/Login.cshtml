@using PontoRemoto.Application.Resources

@model PontoRemoto.Web.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@Texts.ApplicationName | @Labels.LogIn</title>

    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>

<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div><h1 class="logo-name">@Texts.ApplicationName</h1></div>

            <h3>@Texts.WelcomeTo @Texts.ApplicationName @Texts.ApplicationNameComplement</h3>

            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "m-t", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Partial("_ValidationErrors")

                <div class="form-group">
                    <input name="userName" type="email" class="form-control" placeholder="@Labels.UserName" value="@Model.UserName" required="">
                </div>
                <div class="form-group">
                    <input name="password" type="password" class="form-control" placeholder="@Labels.Password" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">@Labels.LogIn</button>

                <a href="#"><small>@Labels.ForgotPassword</small></a>
            }

            <p class="m-t"><small>@Texts.ApplicationName @Texts.ApplicationNameComplement &copy; @DateTime.Now.Year</small></p>
        </div>
    </div>
    
